<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form (in stock_move_manage_priority)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="move_priority_management"
                >
                    <div class="o_setting_left_pane">
                        <field name="stock_move_manage_priority" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="stock_move_manage_priority" />
                        <div class="text-muted">
                            Enable setting priority at stock move level.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
