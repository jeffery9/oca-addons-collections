<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="stock_release_channel_form_view">
        <field name="name">stock.release.channel.form</field>
        <field name="model">stock.release.channel</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="is_action_lock_allowed" invisible="1" />
                    <field name="is_action_unlock_allowed" invisible="1" />
                    <field name="is_action_sleep_allowed" invisible="1" />
                    <field name="is_action_wake_up_allowed" invisible="1" />
                    <button
                        name="action_lock"
                        string="Lock"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-lock"
                        attrs="{'invisible': [('is_action_lock_allowed', '=', False)]}"
                    />
                    <button
                        name="action_unlock"
                        string="Unlock"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-unlock"
                        attrs="{'invisible': [('is_action_unlock_allowed', '=', False)]}"
                    />
                    <button
                        name="action_sleep"
                        string="Sleep"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bed"
                        attrs="{'invisible': [('is_action_sleep_allowed', '=', False)]}"
                    />
                    <button
                        name="action_wake_up"
                        string="Wake Up"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bolt"
                        attrs="{'invisible': [('is_action_wake_up_allowed', '=', False)]}"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="open,locked,asleep"
                        readonly="true"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">

                    </div>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <notebook>
                        <page
                            string="Options"
                            name="options"
                            groups="stock.group_stock_manager"
                        >
                            <group name="options">
                        <field name="state_at_wakeup" />
                        <field name="release_forbidden" />
                        <field
                                    name="release_mode"
                                    attrs="{'invisible': [('release_forbidden', '=', True)]}"
                                />
                        <field
                                    name="batch_mode"
                                    attrs="{'invisible': ['|', ('release_mode','!=', 'batch'), ('release_forbidden', '=', True)]}"
                                />
                        <field
                                    name="max_batch_mode"
                                    attrs="{'invisible': ['|', '|', ('release_mode','!=', 'batch'), ('release_forbidden', '=', True), ('batch_mode', '!=', 'max')]}"
                                />
                    </group>
                        </page>
                        <page string="Selection criteria" name="criteria">
                            <group name="criteria">
                                <field
                                    name="warehouse_id"
                                    options="{'no_create': True}"
                                />
                                <field name="picking_type_ids">
                                    <tree create="0">
                                        <field name="warehouse_id" />
                                        <field name="name" />
                                        <field name="code" />
                                    </tree>
                                </field>
                                <field name="is_manual_assignment" />
                                <field
                                    name="rule_domain"
                                    widget="domain"
                                    options="{'model': 'stock.picking', 'in_dialog': true}"
                                />
                                <field name="partner_ids">
                                    <tree create="0">
                                        <field name="display_name" />
                                        <field name="city" />
                                        <field name="country_id" />
                                    </tree>
                                </field>
                                <field
                                    name="code"
                                    widget="ace"
                                    options="{'mode': 'python'}"
                                    placeholder="Enter Python code here."
                                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_release_channel_search_view">
        <field name="name">stock.release.channel.search</field>
        <field name="model">stock.release.channel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="warehouse_id" />
                <separator />
                <filter
                    string="Open"
                    name="filter_open"
                    domain="[('state','=','open')]"
                />
                <filter
                    string="Locked"
                    name="filter_locked"
                    domain="[('state','=','locked')]"
                />
                <filter
                    string="Aslepp"
                    name="filter_asleep"
                    domain="[('state','=','asleep')]"
                />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                <separator />
                <filter
                    name="warehouse_group"
                    string="Warehouse"
                    context="{'group_by': 'warehouse_id'}"
                />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_release_channel_tree_view">
        <field name="name">stock.release.channel.tree</field>
        <field name="model">stock.release.channel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field
                    name="state"
                    widget="badge"
                    decoration-muted="state == 'asleep'"
                    decoration-info="state  == 'locked'"
                    decoration-success="state == 'open'"
                />
                <field name="name" />
                <field name="release_mode" optional="hide" />
                <field name="count_picking_all" sum="All Total" />
                <field name="count_picking_release_ready" sum="Release Ready Total" />
                <field name="count_picking_released" sum="Released Total" />
                <field name="count_picking_assigned" sum="Assigned Total" />
                <field name="count_picking_waiting" sum="Waiting Total" />
                <field name="count_picking_late" sum="Late Total" />
                <field name="count_picking_priority" sum="Priority Total" />
                <field name="count_picking_done" sum="Done Today Total" />
                <field
                    name="count_picking_chain_in_progress"
                    sum="Related In Progress Total"
                />
                <field name="count_picking_chain_done" sum="Related Done Total" />
            </tree>
        </field>
    </record>

    <record id="stock_release_channel_kanban_view" model="ir.ui.view">
        <field name="name">stock.release.channel.kanban</field>
        <field name="model">stock.release.channel</field>
        <field name="arch" type="xml">
            <kanban
                class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_release_channel"
                create="0"
            >
                <field name="release_mode" />
                <field name="color" />
                <field name="name" readonly="1" />
                <field name="count_picking_release_ready" />
                <field name="count_move_release_ready" />
                <field name="count_picking_released" />
                <field name="count_move_released" />
                <field name="count_picking_assigned" />
                <field name="count_move_assigned" />
                <field name="count_picking_waiting" />
                <field name="count_move_waiting" />
                <field name="count_picking_late" />
                <field name="count_move_late" />
                <field name="count_picking_priority" />
                <field name="count_move_priority" />
                <field name="count_picking_done" />
                <field name="count_move_done" />
                <field name="count_picking_chain_done" />
                <field name="count_picking_chain" />
                <field name="show_last_picking_done" />
                <field name="state" />
                <field name="is_release_allowed" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="#{kanban_color(record.color.raw_value)}"
                            name="release_channel"
                        >
                            <div>
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <field name="name" />
                                            <field name="state" invisible="1" />
                                            <t
                                                t-set="classname"
                                                t-value="{'open': 'fa fa-unlock', 'locked': 'fa fa-lock', 'asleep': 'fa fa-bed'}[record.state.raw_value] || ''"
                                            />
                                            <i
                                                t-attf-class="{{ classname }}"
                                                role="img"
                                                title="name"
                                                style="float: right; line-height: 24px"
                                            />
                                        </div>
                                    </div>

                                    <div class="o_kanban_manage_button_section">
                                        <hr class="mt4 mb4" />
                                        <a
                                            class="o_kanban_manage_toggle_button"
                                            href="#"
                                        ><i
                                                class="fa fa-ellipsis-v"
                                                role="img"
                                                aria-label="Details"
                                                title="Details"
                                            /></a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content">
                                    <div
                                        class="row"
                                        style="--gutter-x:15px; align-items:center; flex-wrap:nowrap"
                                    >
                                        <div
                                            class="col-auto"
                                            style="min-width:72px; min-height:65px"
                                        >
                                            <field
                                                name="is_release_allowed"
                                                invisible="1"
                                            />
                                            <button
                                                class="btn btn-primary"
                                                name="release_next_batch"
                                                type="object"
                                                attrs="{'invisible': ['|', ('is_release_allowed', '=', False), ('release_mode', '!=', 'batch')]}"
                                            >
                                                <i
                                                    class="fa fa-dropbox fa-4x"
                                                    role="img"
                                                    aria-label="Release"
                                                    title="Automatic Release"
                                                />
                                            </button>
                                        </div>
                                        <div class="col">
                                            <div
                                                name="count_to_release"
                                                class="row"
                                                style="justify-content: flex-end; --gutter-x: 5px"
                                            >
                                                <div
                                                    class="col-auto"
                                                    style="flex:0 80px"
                                                >
                                                    <a
                                                        name="action_picking_release_ready"
                                                        type="object"
                                                    >
                                                        To Release
                                                    </a>
                                                </div>
                                                <div
                                                    class="col-auto"
                                                    style="flex:1; text-align:right"
                                                >
                                                    <field
                                                        name="count_picking_release_ready"
                                                    />
                                                </div>
                                                <div
                                                    class="col-auto"
                                                    style="flex:1; white-space:nowrap"
                                                >
                                                    <a
                                                        name="action_move_release_ready"
                                                        type="object"
                                                    >
                                                        [~<field
                                                            name="count_move_release_ready"
                                                        />]
                                                    </a>
                                                </div>
                                            </div>

                                            <div
                                                name="count_released"
                                                class="row"
                                                style="justify-content: flex-end; --gutter-x: 5px"
                                            >
                                                <div
                                                    class="col-auto"
                                                    style="flex:0 80px"
                                                >
                                                    <a
                                                        name="action_picking_released"
                                                        type="object"
                                                    >
                                                        To Do
                                                    </a>
                                                </div>
                                                <div
                                                    class="col-auto"
                                                    style="flex:1; text-align:right"
                                                >
                                                    <field
                                                        name="count_picking_released"
                                                    />
                                                </div>
                                                <div
                                                    class="col-auto"
                                                    style="flex:1; white-space:nowrap"
                                                >
                                                    <a
                                                        name="action_move_released"
                                                        type="object"
                                                    >
                                                        [~<field
                                                            name="count_move_released"
                                                        />]
                                                    </a>
                                                </div>
                                            </div>

                                            <div
                                                name="count_done_today"
                                                class="row"
                                                style="justify-content: flex-end; --gutter-x: 5px"
                                            >
                                                <div
                                                    class="col-auto"
                                                    style="flex:0 80px"
                                                >
                                                    <a
                                                        name="action_picking_done"
                                                        type="object"
                                                    >
                                                        Done Today
                                                    </a>
                                                </div>
                                                <div
                                                    class="col-auto"
                                                    style="flex:1; text-align:right"
                                                >
                                                    <field name="count_picking_done" />
                                                </div>
                                                <div
                                                    class="col-auto"
                                                    style="flex:1; white-space:nowrap"
                                                >
                                                    <a
                                                        name="action_move_done"
                                                        type="object"
                                                    >
                                                        [~<field
                                                            name="count_move_done"
                                                        />]
                                                    </a>
                                                </div>
                                            </div>

                                            <div
                                                name="last_done_picking"
                                                class="row"
                                                t-if="show_last_picking_done"
                                            >
                                                <a
                                                    type="object"
                                                    name="get_action_picking_form"
                                                    class="col"
                                                >
                                                    Last Transfer
                                                </a>
                                                <div class="col-auto">
                                                    <field
                                                        name="last_done_picking_date_done"
                                                    />
                                                </div>
                                            </div>

                                            <div
                                                name="count_done_progress"
                                                class="row mx-0"
                                                style="align-items: center"
                                            >
                                                <div class="col progress px-0">
                                                    <div
                                                        class="progress-bar progress-bar-striped"
                                                        role="progressbar"
                                                        t-att-aria-valuenow="record.count_picking_done.value"
                                                        aria-valuemin="0"
                                                        t-att-aria-valuemax="record.count_picking_full_progress.value"
                                                        t-att-style="'width: ' + record.count_picking_done.value / record.count_picking_full_progress.value * 100 + '%;'"
                                                    >
                                                        <field
                                                            name="count_picking_done"
                                                            t-if="record.count_picking_done.value > 0"
                                                        />
                                                    </div>
                                                </div>
                                                <div
                                                    class="col-auto px-1"
                                                    style="font-size:smaller"
                                                >
                                                    /
                                                    <field
                                                        name="count_picking_full_progress"
                                                    />
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                      <div
                                            class="row col mx-0 o_kanban_primary_bottom bottom_block"
                                            style="--gutter-x:15px; align-items:center; flex-wrap:nowrap"
                                        >
                                        <div class="col-auto">
                                            <button
                                                    class="btn btn-primary"
                                                    name="action_picking_assigned"
                                                    type="object"
                                                >
                                                <span><t
                                                            t-esc="record.count_picking_assigned.value"
                                                        /> To Ship</span>
                                                <br />
                                                <span>[~<t
                                                            t-esc="record.count_move_assigned.value"
                                                        /> Lines]</span>
                                            </button>
                                        </div>
                                        <div class="col">
                                            <div
                                                    name="count_waiting"
                                                    class="row"
                                                    style="justify-content: flex-end; --gutter-x: 5px"
                                                >
                                                <div
                                                        class="col-auto"
                                                        style="flex:0 80px"
                                                    >
                                                    <a
                                                            name="action_picking_waiting"
                                                            type="object"
                                                        >
                                                        Waiting
                                                    </a>
                                                </div>
                                                <div
                                                        class="col-auto"
                                                        style="flex:1; text-align:right"
                                                    >
                                                    <field
                                                            name="count_picking_waiting"
                                                        />
                                                </div>
                                                <div
                                                        class="col-auto"
                                                        style="flex:1; white-space:nowrap"
                                                    >
                                                    <a
                                                            name="action_move_waiting"
                                                            type="object"
                                                        >
                                                        [~<field
                                                                name="count_move_waiting"
                                                            />]
                                                    </a>
                                                </div>
                                            </div>

                                            <div
                                                    name="count_late"
                                                    class="row"
                                                    t-attf-style="justify-content: flex-end; --gutter-x: 5px; #{record.count_picking_late.value > 0 ? 'color: red' : ''}"
                                                >
                                                <div
                                                        class="col-auto"
                                                        style="flex:0 80px"
                                                    >
                                                    <a
                                                            name="action_picking_late"
                                                            type="object"
                                                            t-attf-style="#{record.count_picking_late.value > 0 ? 'color: red' : ''}"
                                                        >
                                                        Late
                                                    </a>
                                                </div>
                                                <div
                                                        class="col-auto"
                                                        style="flex:1; text-align:right"
                                                    >
                                                    <field name="count_picking_late" />
                                                </div>
                                                <div
                                                        class="col-auto"
                                                        style="flex:1; white-space:nowrap"
                                                    >
                                                    <a
                                                            name="action_move_late"
                                                            type="object"
                                                            t-attf-style="#{record.count_picking_late.value > 0 ? 'color: red' : ''}"
                                                        >
                                                        [~<field
                                                                name="count_move_late"
                                                            />]
                                                    </a>
                                                </div>
                                            </div>

                                            <div
                                                    name="count_priority"
                                                    class="row"
                                                    style="justify-content: flex-end; --gutter-x: 5px"
                                                >
                                                <div
                                                        class="col-auto"
                                                        style="flex:0 80px"
                                                    >
                                                    <a
                                                            name="action_picking_priority"
                                                            type="object"
                                                        >
                                                        Priority
                                                    </a>
                                                </div>
                                                <div
                                                        class="col-auto"
                                                        style="flex:1; text-align:right"
                                                    >
                                                    <field
                                                            name="count_picking_priority"
                                                        />
                                                </div>
                                                <div
                                                        class="col-auto"
                                                        style="flex:1; white-space:nowrap"
                                                    >
                                                    <a
                                                            name="action_move_priority"
                                                            type="object"
                                                        >
                                                        [~<field
                                                                name="count_move_priority"
                                                            />]
                                                    </a>
                                                </div>
                                            </div>


                                            <a
                                                    class="row mx-0"
                                                    style="align-items: center; display: flex"
                                                    name="action_picking_all_related"
                                                    type="object"
                                                >
                                                <div
                                                        name="count_picking_chain_progress"
                                                        class="col progress px-0"
                                                        style="background-color: #FFF"
                                                    >
                                                    <div
                                                            class="progress-bar progress-bar-striped"
                                                            role="progressbar"
                                                            t-att-aria-valuenow="record.count_picking_chain_done.value"
                                                            aria-valuemin="0"
                                                            t-att-aria-valuemax="record.count_picking_chain.value"
                                                            t-att-style="'width: ' + record.count_picking_chain_done.value / record.count_picking_chain.value * 100 + '%'"
                                                        >
                                                        <field
                                                                name="count_picking_chain_done"
                                                                t-if="record.count_picking_chain_done.value > 0"
                                                            />
                                                    </div>
                                                    <!--div
                                                        class="progress-bar progress-bar-striped"
                                                        role="progressbar"
                                                        t-att-aria-valuenow="record.count_picking_chain_waiting.value"
                                                        aria-valuemin="0"
                                                        t-att-aria-valuemax="record.count_picking_chain.value"
                                                        t-att-style="'width: ' + record.count_picking_chain_waiting.value / record.count_picking_chain.value * 100 + '%'"

                                                    >
                                                        <field
                                                            name="count_picking_chain_waiting"
                                                            t-if="record.count_picking_chain_waiting.value > 0"
                                                        />
                                                    </div-->
                                                </div>
                                                <div
                                                        class="col-auto px-1"
                                                        style="font-size:smaller"
                                                    >
                                                    /
                                                    <field name="count_picking_chain" />
                                                </div>
                                            </a>
                                        </div>
                                      </div>
                                    </div>
                                </div>

                                <div
                                    class="container o_kanban_card_manage_pane dropdown-menu"
                                    role="menu"
                                >
                                 <div class="row">
                                     <div
                                            class="col-6 o_kanban_card_manage_section o_kanban_manage_view"
                                            name="actions dropdown-menu-left-panel"
                                        >
                                         <field
                                                name="is_action_lock_allowed"
                                                invisible="1"
                                            />
                                         <field
                                                name="is_action_unlock_allowed"
                                                invisible="1"
                                            />
                                         <field
                                                name="is_action_sleep_allowed"
                                                invisible="1"
                                            />
                                         <field
                                                name="is_action_wake_up_allowed"
                                                invisible="1"
                                            />
                                         <div
                                                role="menuitem"
                                                class="o_kanban_card_manage_title"
                                            >
                                            <span>Actions</span>
                                        </div>
                                        <t
                                                t-if="record.is_action_lock_allowed.raw_value"
                                            >
                                             <div role="menuitem">
                                                <a
                                                        name="action_lock"
                                                        type="object"
                                                        icon="fa-lock"
                                                    ><span class="ms-2">Lock</span></a>
                                             </div>
                                        </t>
                                        <t
                                                t-if="record.is_action_unlock_allowed.raw_value"
                                            >
                                            <div role="menuitem">
                                                <a
                                                        name="action_unlock"
                                                        type="object"
                                                        icon="fa-unlock"
                                                    ><span
                                                            class="ms-2"
                                                        >Unlock</span></a>
                                            </div>
                                        </t>
                                        <t
                                                t-if="record.is_action_sleep_allowed.raw_value"
                                            >
                                            <div role="menuitem">
                                                <a
                                                        name="action_sleep"
                                                        type="object"
                                                        icon="fa-bed"
                                                    ><span class="ms-2">Sleep</span></a>
                                            </div>
                                        </t>
                                        <t
                                                t-if="record.is_action_wake_up_allowed.raw_value"
                                            >
                                            <div role="menuitem">
                                                <a
                                                        name="action_wake_up"
                                                        type="object"
                                                        icon="fa-bolt"
                                                    ><span
                                                            class="ms-2"
                                                        >Wake Up</span></a>
                                            </div>
                                        </t>
                                     </div>
                                     <div
                                            class="col-6 o_kanban_card_manage_section o_kanban_manage_reporting"
                                            name="dropdown-menu-right-panel"
                                        >
                                     </div>
                                 </div>
                                <div class="o_kanban_card_manage_settings row">
                                    <div
                                            role="menuitem"
                                            aria-haspopup="true"
                                            class="col-6"
                                        >
                                        <ul
                                                class="oe_kanban_colorpicker"
                                                data-field="color"
                                                role="popup"
                                            />
                                    </div>
                                    <div role="menuitem" class="col-6">
                                        <t t-if="widget.editable">
                                            <a
                                                    role="menuitem"
                                                    type="edit"
                                                    class="dropdown-item"
                                                >Settings</a>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="stock_release_channel_act_window">
        <field name="name">Release Channels</field>
        <field name="res_model">stock.release.channel</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field
            name="context"
        >{'search_default_filter_open': True, 'search_default_filter_locked': True}</field>
