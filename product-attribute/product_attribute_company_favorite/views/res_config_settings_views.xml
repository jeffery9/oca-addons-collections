<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="product_attributes" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="new_attribute_favorite_for_all_companies"
                >
                    <div class="o_setting_left_pane">
                        <field name="new_attribute_favorite_for_all_companies" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="new_attribute_favorite_for_all_companies" />
                        <div class="text-muted">
                            When a new attribute is created, set it as favorite for all companies. Otherwise, it is only set as favorite for the user's current company
                        </div>
                    </div>
                </div>
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="new_attribute_value_favorite_for_all_companies"
                >
                    <div class="o_setting_left_pane">
                        <field name="new_attribute_value_favorite_for_all_companies" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="new_attribute_value_favorite_for_all_companies" />
                        <div class="text-muted">
                            When a new attribute value is created, set it as favorite for all companies. Otherwise, it is only set as favorite for the user's current company
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
